<h2>Edit Activity</h2>
<div class='col-md-6'>
<%= form_for @activity do |f| %>
  <div class="form-group">
    <%= label_tag(:title, "Title:") %>
    <%= f.text_field(:title, value: @activity.title, class: "form-control") %>
  </div>
  <div class="form-group">
      <%= label_tag(:body, "Body:") %>
      <%= f.text_area(:body, value: @activity.body, class: "form-control") %>
  </div>
    <%= f.submit("Update", class: "btn btn-primary") %>
<% end %>
</div>
